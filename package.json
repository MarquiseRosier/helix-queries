{
  "name": "@adobe/helix-run-query",
  "version": "2.10.13",
  "private": true,
  "description": "Helix Run Query",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov -i -g 'Post-Deploy' --check-coverage --branches 100 --statements 100 --lines 100 mocha -i -g 'Post-Deploy'",
    "test-ci": "nyc --reporter=text --reporter=lcov -i -g 'Post-Deploy' --check-coverage --branches 100 --statements 100 --lines 100 mocha -i -g 'Post-Deploy' --reporter xunit --reporter-options output=./junit/test-results.xml --exit && codecov",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "wsk-builder -v",
    "deploy": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json",
    "deploy-sequences": "wsk-builder --no-build -no-hints -l latest -l major -l minor",
    "deploy-ci": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-run-query.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-run-query/issues"
  },
  "homepage": "https://github.com/adobe/helix-run-query#readme",
  "dependencies": {
    "@adobe/fastly-native-promises": "1.23.3",
    "@adobe/helix-epsagon": "1.6.8",
    "@adobe/helix-status": "9.2.0",
    "@adobe/openwhisk-action-logger": "2.4.4",
    "@adobe/openwhisk-action-utils": "4.4.4",
    "@google-cloud/bigquery": "5.7.0",
    "dotenv": "10.0.0",
    "fs-extra": "10.0.0",
    "googleapis": "82.0.0",
    "json-size": "1.0.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.5",
    "@adobe/openwhisk-action-builder": "3.0.27",
    "@pollyjs/adapter-node-http": "5.1.1",
    "@pollyjs/core": "5.1.1",
    "@pollyjs/persister-fs": "5.1.1",
    "@pollyjs/persister-rest": "5.1.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "ajv": "8.6.2",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.31.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.23.4",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "11.1.1",
    "lodash": "4.17.21",
    "mocha": "9.0.2",
    "npm": "7.20.1",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.4.4",
    "sinon": "11.1.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "wsk": {
    "namespace": "helix",
    "name": "helix-services/run-query@${version}",
    "static": [
      "src/queries/recent-errors.sql",
      "src/queries/next-resource.sql",
      "src/queries/top-pages.sql",
      "src/queries/top-blogposts.sql",
      "src/queries/error500.sql",
      "src/queries/most-visited.sql"
    ]
  }
}
